{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">
    <div class="row no-gutters border rounded overflow-hidden flex-md-row align-items-center mb-4 shadow-sm h-md-250 position-relative">
        {{#if feature_image}}
        <div class="col-md d-block">
            <img class="gh-card-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                   {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
            />
        </div>
        {{/if}}
        <div class="col-md p-4 d-flex flex-column position-static gh-card-content">
            <p class="h3 mb-0 gh-card-title">{{title}}</p>
            <p class="card-text mb-auto">{{excerpt characters="150"}} &bull;&nbsp;<a class="text-primary" href={{url}}>Read&nbsp;more</a></p>
        </div>
    </div>
</article>