{{! prettier-ignore }}
<article class="story-postcard">
    <a href="{{url}}">
        <div class="flex flex-col h-full md:flex-row md:h-48 lg:flex-col lg:h-full">
            {{#if feature_image}}
            <img class="object-cover w-full h-48 md:w-2/5 md:h-full lg:w-full lg:h-48" src="{{img_url feature_image}}" alt="{{title}}" />
            {{else}} {{!-- Placeholder --}}
            <img class="object-cover hidden md:block md:w-2/5 md:h-full lg:w-full lg:h-48" src="https://via.placeholder.com/100/FFFFFF/FFFFFF" alt="{{title}}" />
            {{/if}}
            <div class="flex-grow border-2 border-gray-300 px-3 py-2 flex flex-col justify-between">
                <div>
                    <h1 class="text-base text-gray-500">{{title}}</h1>
                    <p class="text-sm text-gray-500 my-2 max-h-20 overflow-hidden">{{excerpt}}</p>
                </div>
                <div class="flex justify-between">
                    <p class="text-xs text-gray-500">
                        Posted on <time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="D MMMM, YYYY"}}</time>
                    </p>
                    <button type="button" class="self-center border-2 border-gray-400 rounded-sm px-1 text-xs font-semibold">SHARE</button>
                </div>
            </div> 
        </div>
    </a>
</article>