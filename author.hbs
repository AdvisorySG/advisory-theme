{{!< default}}

<div class="w-full max-w-screen-xl mx-auto my-0">
    {{#author}}
    <header class="prose lg:prose-xl mx-auto text-center">
        {{#if profile_image}}
            <img class="gh-author-image" src="{{profile_image}}" alt="{{name}}" />
        {{/if}}

        <h1>{{name}}</h1>
        {{#if bio}}
            <p>{{bio}}</p>
        {{/if}}

        <div class="gh-author-meta">
            <div class="gh-author-links">
                {{#if website}}
                    <a href="{{website}}" target="_blank" rel="noopener">Website</a>
                {{/if}}
                {{#if twitter}}
                    <a href="{{twitter_url}}" target="_blank" rel="noopener">Twitter</a>
                {{/if}}
                {{#if facebook}}
                    <a href="{{facebook_url}}" target="_blank" rel="noopener">Facebook</a>
                {{/if}}
            </div>
        </div>

        {{#if cover_image}}
            <img class="gh-page-image" src="{{cover_image}}" alt="{{name}}" />
        {{/if}}
    </header>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-x-20 gap-y-10 w-4/5 my-4 mx-auto">
    {{#get "posts" limit="all" filter="author:{{slug}}" include="tags" as |authored|}}
        {{#foreach authored}}
            {{> "post-card"}}
        {{/foreach}}
        {{else}} <p>There are no articles written by this author.</p>
    {{/get}}
    </div>
</div>
{{/author}}