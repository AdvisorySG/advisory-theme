{{!< default}}

{{#post}}
    <div class="{{post_class}} gh-canvas">
        <article class="prose lg:prose-xl">
            <header class="gh-header text-center">
                <h1>
                    {{title}}
                </h1>
                <span class="gh-post-meta text-sm tracking-wide uppercase opacity-80">
                    <time datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="D MMM YYYY"}}
                    </time>
                    <span>
                        Written by:&nbsp;
                        {{#foreach authors}}
                            <span class="gh-post-meta-content-item">
                                <a href={{url}}>
                                    {{name}}
                                </a>
                            </span>
                        {{/foreach}}
                    </span>
                    <span>
                        {{reading_time}}
                    </span>
                </span>

                <span class="flex flex-wrap content-center gap-4 justify-center"> 
                {{#foreach tags}}
                    <div class="flex-none text-base text-gray-600 hover:no-underline hover:bg-gray-50 border-2 border-black hover:border-yellow-500 rounded-full px-3">
                        <a href={{url}}>
                            {{name}}
                        </a>
                    </div>
                {{/foreach}}
                </span>

                {{#if custom_excerpt}}
                    <p>
                        {{custom_excerpt}}
                    </p>
                {{/if}}
            </header>

            <div class="gh-content">
                {{#if feature_image}}
                    <img
                        class="w-full mt-2.5"
                        src="{{feature_image}}"
                        alt="{{title}}"
                    />
                {{/if}}
                {{content}}
            </div>
        </article>
{{/post}}

{{!-- implementation of related articles --}}
{{!-- has to be outside post block due to conflict --}}
<hr class="pb-4">
<aside class="pb-4">
    <h4 class="text-4xl">
        Related Articles
    </h4> 
    <div class="grid grid-cols-1 p-1 gap-6 md:p-0 md:grid-cols-3 pt-4 pb-4">
        {{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags" as |related|}}
            {{#foreach related}}
                {{> "post-card"}}
            {{/foreach}}
            {{else}} <p>There are no related articles.</p>
        {{/get}}
    </div>
</aside>
